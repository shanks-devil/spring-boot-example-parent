<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.shanks.spring.multi.datasource.repository.FirstRepository">

	<resultMap type="User" id="UserMap">
		<result property="userId" column="user_id" />
		<result property="userName" column="user_name" />
		<result property="userEmail" column="user_email" />
		<result property="userPhone" column="user_phone" />
		<result property="createTime" column="create_time" />
		<result property="createUserId" column="create_user_id" />
		<result property="modifyTime" column="modify_time" />
		<result property="modifyUserId" column="modify_user_id" />
		<result property="status" column="status" />
	</resultMap>

	<select id="selectUserList" resultMap="UserMap">
		select
		user_id,
		user_name,
		user_email,
		user_phone,
		create_time,
		create_user_id,
		modify_time,
		modify_user_id,
		status
		from user_t
	</select>

	<insert id="create" parameterType="User">
		insert into user_t(user_name,user_email,user_phone
			,create_time,create_user_id,modify_time,modify_user_id,status)
		values(#{userName},#{userEmail},#{userPhone},
		#{createTime},#{createUserId},#{modifyTime},#{modifyUserId},#{status})
		<selectKey resultType="long" order="AFTER" keyProperty="userId">
			SELECT LAST_INSERT_ID();
		</selectKey>
	</insert>

	<select id="selectUser" parameterType="long" resultMap="UserMap">
		select
		user_id,
		user_name,
		user_email,
		user_phone,
		create_time,
		create_user_id,
		modify_time,
		modify_user_id,
		status
		from user_t where user_id = #{userId}
	</select>

	<update id="update" parameterType="User">
		update user_t
		set user_email =
		#{userEmail}, user_phone = #{userPhone}
		where user_id = #{userId}
	</update>

	<delete id="delete" parameterType="long">
		delete from user_t where
		user_id = #{userId}
	</delete>

</mapper>